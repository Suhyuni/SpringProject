<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- Define the value of file.upload.directory property -->
    <bean id="fileProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:file.properties" />
    </bean>

    <!-- Inject the properties into the bean -->
    <bean id="bookApiConfig" class="com.example.BookApiConfig">
        <property name="uploadDirectory" value="#{fileProperties['file.upload.directory']}" />
    </bean>
</beans>